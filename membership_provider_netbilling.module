<?php

use Drupal\Core\Entity\EntityFieldManager;

/**
 * Find configured NETBilling sites by identifying field instances.
 *
 * @return array|mixed
 */
function membership_provider_netbilling_field_instances() {
  /* @var EntityFieldManager $manager */
  $manager = \Drupal::service('entity_field.manager');
  $map = $manager->getFieldMapByFieldType('netbilling_site_config');
  return $map;
}
